@model _4AHWII_WebProjekt_MasoodFabian.Models.User

@{
    ViewData["Title"] = "Register";
}

<div class="login-dark">
    <form asp-controller="Register" asp-action="Register" method="post" class="form">
        <table>
            <thead>
                <tr>
                    <th colspan="2">Registrierung</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Username</td>
                    <td><input type="text" asp-for="Username" /></td>
                    <td>
                        <span asp-validation-for="Username"></span>
                    </td>
                </tr>
                <tr>
                    <td>Passwort</td>
                    <td><input type="password" asp-for="Passwort" /></td>
                    <td>
                        <span asp-validation-for="Passwort"></span>
                    </td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td><input type="email" asp-for="Email" /></td>
                    <td>
                        <span asp-validation-for="Email"></span>
                    </td>
                </tr>
                <tr>
                    <td>Vorname</td>
                    <td><input type="text" asp-for="Vorname" rows="4" cols="30"></input></td>
                </tr>
                <tr>
                    <td>Nachname</td>
                    <td><input type="text" asp-for="Nachname" rows="4" cols="30"></input></td>
                </tr>
                <tr>
                    <td>Telefon</td>
                    <td><input type="tel" asp-for="Telefon" rows="4" cols="30"></input></td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td><input type="text" asp-for="Adresse" rows="4" cols="30"></input></td>
                </tr>
                <tr>
                    <td>Geburtsdatum</td>
                    <td><input type="date" asp-for="Geburtsdatum" rows="4" cols="30"></input></td>
                    <td>
                        <span asp-validation-for="Geburtsdatum"></span>
                    </td>
                </tr>
                <tr>
                    <td>Newsletter</td>
                    <td><input type="checkbox" asp-for="Newsletter" rows="4" cols="30"></input></td>
                </tr>

                <tr>
                    <td>
                        <input type="submit" value="registrieren" />
                        <input type="reset" value="abbrechen" />
                    </td>
                </tr>
            </tbody>
        </table>
        <p>
            Sie haben bereits ein Konto? <br />
            <a asp-controller="Login" asp-action="Login">Jetzt Anmelden</a>
        </p>
    </form>
</div>