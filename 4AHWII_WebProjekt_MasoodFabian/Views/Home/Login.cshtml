
@{
    ViewData["Title"] = "Login";
}

<div class="login-dark">
    <form method="post" action="login">
        <h2 class="sr-only">Login Form</h2>
        <div class="form-group"><input class="form-control" type="email" name="Email" placeholder="Email"></div>
        <div class="form-group"><input class="form-control" type="password" name="Passwort" placeholder="Password"></div>
        <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Login</button></div>
        <a href="Register" class="forgot">Jetzt Registrieren</a>
    </form>
</div>